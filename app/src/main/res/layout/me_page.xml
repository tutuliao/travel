<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/me_circularImageView"
                    android:layout_width="@dimen/me_icon_width"
                    android:layout_height="@dimen/me_icon_height"
                    android:src="@drawable/girl"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_icon_left"
                    android:layout_marginTop="@dimen/me_icon_top"
                    android:layout_marginBottom="@dimen/me_icon_bottom"
                    android:shape="oval">
                </ImageView>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/me_icon_height"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/me_name"
                       android:layout_width="@dimen/me_name_width"
                       android:layout_height="@dimen/me_name_height"
                       android:text="@string/me_name"
                       android:layout_marginLeft="@dimen/me_name_left"
                       android:layout_marginTop="@dimen/me_name_top"
                       android:layout_marginBottom="@dimen/me_name_bottom"
                       android:layout_marginRight="@dimen/me_name_right"
                       android:textSize="@dimen/me_large_size"
                       android:textColor="@color/black">
                   </TextView>

                   <TextView
                       android:id="@+id/me_id"
                       android:layout_width="@dimen/me_name_width"
                       android:layout_height="@dimen/me_name_height"
                       android:text="@string/me_id"
                       android:layout_marginLeft="@dimen/me_name_left"
                       android:layout_marginBottom="@dimen/me_name_bottom"
                       android:layout_marginRight="@dimen/me_name_right"
                       android:textSize="@dimen/me_medium_size"
                       android:textColor="@color/grey">
                   </TextView>

               </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:text="我的"
            android:textSize="50sp"
            android:textColor="#ff0000"
            android:layout_gravity="center" />

    </LinearLayout>
</layout>