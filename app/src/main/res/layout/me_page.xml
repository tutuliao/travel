<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/me_circularImageView"
                    android:layout_width="@dimen/me_icon_width"
                    android:layout_height="@dimen/me_icon_height"
                    android:src="@drawable/girl"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_icon_left"
                    android:layout_marginTop="@dimen/me_icon_top"
                    android:layout_marginBottom="@dimen/me_icon_bottom"
                    android:shape="oval">
                </ImageView>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/me_icon_height"
                   android:orientation="vertical">
                   <include android:id="@+id/me_name"
                       layout="@layout/me_account"/>
                   <TextView
                       android:id="@+id/me_id"
                       android:layout_width="@dimen/me_name_width"
                       android:layout_height="@dimen/me_name_height"
                       android:text="@string/me_id"
                       android:layout_marginLeft="@dimen/me_name_left"
                       android:layout_marginBottom="@dimen/me_name_bottom"
                       android:layout_marginRight="@dimen/me_name_right"
                       android:textSize="@dimen/me_medium_size"
                       android:textColor="@color/grey">
                   </TextView>

               </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/me_account_item_left"
                    android:orientation="horizontal">
                    <include layout="@layout/me_account_icon"/>
                    <include layout="@layout/me_account_text"/>
                    <include layout="@layout/me_arrow_right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/me_account_item_left"
                    android:orientation="horizontal">
                    <include layout="@layout/me_password_icon"/>
                    <include layout="@layout/me_password_text"/>
                    <include layout="@layout/me_arrow_right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/me_account_item_left"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
        </RelativeLayout>
    </LinearLayout>
</layout>