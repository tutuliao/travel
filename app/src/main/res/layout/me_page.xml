<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

            <!-- 子项的宽度为match_parent，高度为设备屏幕高度的10% -->
            <ImageView
                android:id="@+id/circularImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/girl"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/me_icon_left"
                android:layout_marginTop="@dimen/me_icon_top"
                android:layout_marginBottom="@dimen/me_icon_bottom"
                android:layout_marginRight="@dimen/me_icon_right"
                android:shape="oval">
            </ImageView>

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="50sp"
            android:textColor="#ff0000"
            android:layout_gravity="center" />

    </LinearLayout>
</layout>