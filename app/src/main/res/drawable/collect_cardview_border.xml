<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- 红色边框 -->
            <corners android:radius="@dimen/home_item_radius"/> <!-- 根据需要设置半径 -->
        </shape>
    </item>
    <!-- 主要内容背景颜色 -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- 背景色 -->
            <corners android:radius="@dimen/home_item_radius"/> <!-- 根据需要减小半径以适应边框 -->
        </shape>
    </item>
</layer-list>
